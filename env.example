# Server Configuration
HOST=127.0.0.1
PORT=4343
APP_DIR=.

# Security
APP_SESSION_SECRET=your-session-secret-here
APP_USERNAME=admin
APP_PASSWORD=your-secure-password
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# PM2 Configuration
PM2_HOME=~/.pm2
PM2_INSTANCES=1

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Application Settings
SHOW_GIT_INFO=false
SHOW_ENV_FILE=false

# Defaults
DEFAULTS_LINES_PER_REQUEST=50
DEFAULTS_BCRYPT_HASH_ROUNDS=10

# Deployment
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
DEPLOY_BRANCH=main

# Optional: Email Notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
NOTIFICATION_EMAIL=notifications@example.com